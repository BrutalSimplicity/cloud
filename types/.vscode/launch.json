    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}\\tests\\utils.ts",
            "outFiles": [ "${workspaceRoot}\\lib\\**\\*.js"]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Port",
            "address": "localhost",
            "port": 5858,
            "outFiles": []
        },
		{
			"name": "Run mocha",
			"type": "node",
            "request": "launch",
			"program": "${workspaceRoot}\\node_modules\\mocha\\bin\\_mocha",
			"args": ["${workspaceRoot}\\lib\\datastore.js"],
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "tsc",
            "sourceMaps": true
		}
    ]
}