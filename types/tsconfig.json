{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "lib",
        "baseUrl": ".",
        "paths": {
            "*": [ "./src/*", "./scripts/*", "./tests/*", "./*"]
        },
        "typeRoots": [
            "./src",
            "./node_modules/@types"
        ]
    },

    "include": [
        "src/*",
        "tests/*",
        "scripts/*",
        "./*"
    ]
}